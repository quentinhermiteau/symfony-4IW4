{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-light"><a class="text-reset text-decoration-none" href="{{ path('admin_article_index') }}">Back to list</a></button>
    <button class="btn btn-warning"><a class="text-reset text-decoration-none" href="{{ path('admin_article_edit', {'id': article.id}) }}">Edit</a></button>

    {{ include('admin/article/_delete_form.html.twig') }}
{% endblock %}
