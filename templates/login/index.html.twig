{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="mx-auto vh-100 row align-items-center" style="width: 400px;">
        <div class="card shadow rounded">
            <div class="card-body flex flex-column">
                    <div class="text-center">
                        <h2>Login:</h2>
                    </div>
                <form action="{{ path('login') }}" method="post">
                    <label for="username" class="form-label">Email:</label>
                    <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}"/>
                    
                    <label for="password" class="form-label mt-2">Password:</label>
                    <input type="password" id="password" class="form-control" name="_password"/>

                    {# If you want to control the URL the user is redirected to on success #}
                    <input type="hidden" name="_target_path" value="/article"/> 
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary mt-2">Login</button>
                    </div>
                    <a href="{{ path('app_register') }}" class="link-primary">Don't have an account yet? Go to register page</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}